<form id="form" class="mb-5" action="#" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="title" required>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input class="form-control" type="text" id="price" name="price" required>
    </div>
    <div class="form-group">
        <label for="thumbnailUrl">Thumbnail Url</label>
        <input class="form-control" type="text" id="thumb" name="thumbnailUrl" placeholder="https://" required>
        <small class="form-text text-muted">Get the icons from <a href="https://www.iconfinder.com/iconsets/fruits-66" target="_blank">here</a>.</small>
    </div>
    <input class="btn btn-primary" type="submit" value="Save product">
</form>