<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Express Handlebars</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Express-handlebars</a>
    </nav>

    <div class="container-sm pt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{{ body }}}
            </div>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/moment"></script>
    <script>
    var socket = io();
    
    // Upload products
    var productsTable = document.getElementById('products');
    var form = document.getElementById('form');
    var title = document.getElementById('title');
    var price = document.getElementById('price');
    var thumb = document.getElementById('thumb');

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        if(title.value && price.value && thumb.value) {
            var product = {
                title: title.value, 
                price: price.value, 
                thumbnailUrl: thumb.value
            }
            socket.emit('new product', product);
            title.value = '';
            price.value = '';
            thumb.value = '';
        } 
    });

    socket.on('new product', function(product) {
        var productItem = document.createElement('tr');
        productItem.innerHTML = `<td><strong>${product.title}</strong></td>` +
            `<td>${product.price}</td>` +
            `<td class="text-right"><img src="${product.thumbnailUrl}" alt="${product.title}" style="max-width:30px;"></td>`;
        productsTable.appendChild(productItem);
    });

    // Send message
    var chat = document.getElementById('chat');
    var clientEmail = document.getElementById('email');
    var clientMessage = document.getElementById('message');
    var messages = document.getElementById('messages');
    
    chat.addEventListener('submit', function(e) {
        e.preventDefault();
        if(clientEmail.value && clientMessage.value) {
            var message = {
                email: clientEmail.value, 
                timestamp: moment().format('DD/MM/YYYY HH:MM:SS'), 
                text: clientMessage.value
            }
            socket.emit('new message', message);
            clientEmail.value = '';
            clientMessage.value = '';
        } 
    });

    socket.on('new message', function(message) {
        var messageItem = document.createElement('li');
        messageItem.innerHTML = `<strong style="color:blue">${message.email} </strong>` +
            `<span style="color:brown">[ ${message.timestamp} ] : </span>` +
            `<em style="color:green">${message.text}</em>`;
        messages.appendChild(messageItem);
    });

    </script>
</body>
</html>